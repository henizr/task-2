include ../text-input/text-input
include ../header-element/header-element
//-
  Свойства миксина text-field:

    properties.hasHeaderDescription - Наличие описания (boolean)
    properties.hasHeader - Наличие заголовка (boolean)
    properties.description -  Описание (string)
    properties.header -  Заголовок (string)
    properties.placeholder - Текст placeholder-а (string) 
    properties.value - Значение по умолчанию (string)
    properties.type - Тип input- a (string)


mixin subscription-text-field(properties)
    .subscription-text-field
        +header-element( { hasHeaderDescription: properties.hasHeaderDescription, headerDescription: properties.headerDescription, header: properties.header } )
        div(class=`${properties.inputCondition==='hovered-focused'?'subscription-text-field__text-input subscription-text-field__text-input_hovered-focused':'subscription-text-field__text-input'}`)
            +text-input({ inputPlaceholder: properties.inputPlaceholder, inputType: properties.inputType, inputValue: properties.inputValue, inputClasses: properties.inputClasses })
            div(class="material-icons subscription-text-field__arrow") arrow_forward